{
  "name": "tamarin",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilcu3/vscode-tamarin"
  },
  "publisher": "gilcu3",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "tamarin",
        "aliases": [
          "tamarin"
        ],
        "extensions": [
          ".spthy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tamarin",
        "scopeName": "source.tamarin",
        "path": "./syntaxes/tamarin.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tamarin",
        "path": "./snippets/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "tamarin.checkSyntax",
        "title": "Tamarin Check Syntax"
      },
      {
        "command": "tamarin.checkSemantics",
        "title": "Tamarin Check Semantics"
      },
      {
        "command": "tamarin.runServer",
        "title": "Tamarin Run Code in Server"
      },
      {
        "command": "tamarin.runConsoleProofCommand",
        "title": "Tamarin Run Code in Console"
      },
      {
        "command": "tamarin.play",
        "title": "Run Tamarin"
      },
      {
        "command": "tamarin.play2",
        "title": "Run Tamarin with auto-sources option"
      },
      {
      "command": "tamarin.renameCodeAction",
      "when": "editorLangId == tamarin",
      "title" : "Rename"
      },
      {
        "command" : "Rename",
        "title" : "Rename"
      }
    ],
    "keybindings": [
      {
        "command": "tamarin.checkSyntax",
        "key": "ctrl+alt+q",
        "when": "resourceLangId == tamarin"
      },
      {
        "command": "tamarin.checkSemantics",
        "key": "ctrl+alt+b",
        "when": "resourceLangId == tamarin"
      },
      {
        "command": "tamarin.runServer",
        "key": "ctrl+alt+l",
        "when": "resourceLangId == tamarin"
      },
      {
        "command": "tamarin.runConsoleProofCommand",
        "key": "ctrl+alt+p",
        "when": "resourceLangId == tamarin"
      }
    ],
    "configuration": {
      "title": "Tamarin",
      "properties": {
        "tamarin.parameter.autoSources": {
          "type": "boolean",
          "default": false,
          "description": "Use --auto--sources"
        },
        "tamarin.parameter.quitOnWarning": {
          "type": "boolean",
          "default": true,
          "description": "Use --quit-on-warning"
        }
      }
    }
    ,
  "menus": {
    "editor/context": [
      {
        "command": "Rename",
        "group": "navigation",
        "when": "editorTextFocus && editorLangId == tamarin && !inDebugRepl"
      }
    ]
  }
  },
  "main": "./out/extension.js",
  "types": "bindings/node",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^9.1.0",
    "@types/node": "^13.13.52",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "prebuildify": "^6.0.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "chai": "^5.1.1",
    "node-gyp-build": "^4.8.0",
    "ovsx": "^0.8.1",
    "tree-sitter": "^0.21.0",
    "tree-sitter-cli": "^0.22.6",
    "tree-sitter-highlight": "^1.0.1",
    "tree-sitter-javascript": "^0.21.3",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.22.6"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "license": "MIT",
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "tree-sitter": [
    {
      "scope": "source.spthy",
      "injection-regex": "^spthy$"
    }
  ]
}
